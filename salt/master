# Salt Master config for use with salt-ssh

# The root directory prepended to these options: pki_dir, cachedir,
# sock_dir, log_file, autosign_file, autoreject_file, extension_modules,
# key_logfile, pidfile:
root_dir: salt/local

file_roots:
  base:
    - salt/roots

pillar_roots:
  base:
    - salt/pillar

log_file: var/log/master
